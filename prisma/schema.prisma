generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id          String        @id @default(uuid())
  name        String
  email       String
  password    String
  balance     Int
  createdAt   DateTime      @default(now())
  transaction transaction[]
}

model transaction {
  id          String   @id @default(uuid())
  name        String
  description String
  doneBy      user     @relation(fields: [userId], references: [id])
  userId      String
  doneAt      DateTime
  addedAt     DateTime @default(now())
}
